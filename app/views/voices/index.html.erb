<h1>一覧表示</h1>

<table>
    <tr>
        <th>内容</th>
    </tr>
    
    <% @voices.each do |voice| %>
    <tr>
        <td><%= voice.content %></td>
        
        <td><%= link_to '投稿を確認する', voice_path(voice.id) %></td>
        <td><%= link_to '編集', edit_voice_path(voice.id) %></td>
        <td><%= link_to '削除', voice_path(voice.id), method: :delete , data: { confirm: '削除していいですか？' } %></td>

    </tr>
<% end %>
</table>

<br>
<%= link_to '投稿', new_voice_path %>
<%= link_to '一覧へ戻る', voices_path %>